                @Html.Action("ListarMaterias")
                @Html.ValidationMessageFor(model => model.id_materia, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Nota1, htmlAttributes: new { @class = "control-label col-md-2" })
