@model CRUD_Alumnos.Models.Calificacion

@{
    ViewBag.Title = "Editar Calificacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Calificacion</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Calificacion</h4>
