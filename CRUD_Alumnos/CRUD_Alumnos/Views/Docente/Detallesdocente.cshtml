@model CRUD_Alumnos.Models.Docente

@{
    ViewBag.Title = "Detalles del Docente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles Docente</h2>

<div>
    <h4>Docente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Completo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>

        <dt>
            Edad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

        <dt>
            Sexo
        </dt>

        <dd>
            @{
                if (Model.Sexo == "M")
                {
                    <span>Masculino</span>
                }
                else
                {
                    <span>Femenino</span>
                }
            }
        </dd>

    </dl>
</div>
<p>
    <button type="button" class="btn btn-primary">@Html.ActionLink("Editar", "Editardocente", new { id = Model.Id_Docente }, new { @class = "boton" })</button> | 
    <button type="button" class="btn btn-warning">@Html.ActionLink("Regresar", "Index", "", new { @class = "regresar" })</button>
</p>
