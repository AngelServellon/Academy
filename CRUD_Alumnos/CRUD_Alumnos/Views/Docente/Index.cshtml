@model IEnumerable<CRUD_Alumnos.Models.Docente>

@{
    ViewBag.Title = "Docentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Docentes</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Agregardocente")
</p>
<table class="table">
    <tr>

        <th>
            Nombre Completo
        </th>
        <th>
            Edad
        </th>
        <th>
            Sexo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @{
                    if (item.Sexo == "M")
                    {
                        <span>Masculino</span>
                    }
                    else
                    {
                        <span>Femenino</span>
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Editardocente", new { id = item.Id_Docente }) |
                @Html.ActionLink("Detalles", "Detallesdocente", new { id = item.Id_Docente }) |
                @Html.ActionLink("Eliminar", "Eliminardocente", new { id = item.Id_Docente }, new { @class = "aElimina"})
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm("Estas seguro de eliminar? ")) {
                event.preventDefault();
            }
        });
    </script>
}