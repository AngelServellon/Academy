@model IEnumerable<CRUD_Alumnos.Models.Docente>

@{
    ViewBag.Title = "Docentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Docentes</h2>
<br />
<p>
    <button type="button" class="btn btn-warning">@Html.ActionLink("Crear nuevo", "Agregardocente", "", new { @class = "boton" })</button>
</p>
<table class="table-responsive">
    <thead>
        <tr>

            <th>
                Nombre Completo
            </th>
            <th>
                Edad
            </th>
            <th>
                Sexo
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @{
                        if (item.Sexo == "M")
                        {
                            <span>Masculino</span>
                        }
                        else
                        {
                            <span>Femenino</span>
                        }
                    }
                </td>
                <td>
                    <button type="button" class="btn btn-primary">@Html.ActionLink("Editar", "Editardocente", new { id = item.Id_Docente }, new { @class = "boton" })</button>
                    <button type="button" class="btn btn-success">@Html.ActionLink("Detalles", "Detallesdocente", new { id = item.Id_Docente }, new { @class = "boton" })</button>
                    <button type="button" class="btn btn-danger">@Html.ActionLink("Eliminar", "Eliminardocente", new { id = item.Id_Docente }, new { @class = "aElimina" })</button>
                </td>
            </tr>
        }
    </tbody>
    

</table>

@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm("Estas seguro de eliminar? ")) {
                event.preventDefault();
            }
        });
    </script>
}