@model IEnumerable<CRUD_Alumnos.Models.Materia>

@{
    ViewBag.Title = "Materia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materias</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Agregarmateria")
</p>
<table class="table">
    <tr>
        <th>
            Materia
        </th>
        <th>
            Docente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Docente.NombreCompleto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editarmateria", new { id = item.Id_Materia }) |
                @Html.ActionLink("Detalles", "Detallesmateria", new { id = item.Id_Materia }) |
                @Html.ActionLink("Eliminar", "Eliminarmateria", new { id = item.Id_Materia }, new { @class = "aElimina" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm("Estas seguro de eliminar? ")) {
                event.preventDefault();
            }
        });
    </script>
}