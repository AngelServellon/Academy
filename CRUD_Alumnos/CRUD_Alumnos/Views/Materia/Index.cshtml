@model IEnumerable<CRUD_Alumnos.Models.Materia>

@{
    ViewBag.Title = "Materia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materias</h2>
<br />
<p>
    <button type="button" class="btn btn-warning">@Html.ActionLink("Crear Nuevo", "Agregarmateria", "", new { @class = "boton" })</button>
</p>
<table class="table-responsive">
    <thead>
        <tr>
            <th>
                Materia
            </th>
            <th>
                Docente
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente.NombreCompleto)
                </td>
                <td>
                    <button type="button" class="btn btn-primary">@Html.ActionLink("Editar", "Editarmateria", new { id = item.Id_Materia }, new { @class = "boton" })</button>
                    <button type="button" class="btn btn-success">@Html.ActionLink("Detalles", "Detallesmateria", new { id = item.Id_Materia }, new { @class = "boton" })</button>
                    <button type="button" class="btn btn-danger">@Html.ActionLink("Eliminar", "Eliminarmateria", new { id = item.Id_Materia }, new { @class = "aElimina" })</button>
</td>
            </tr>
        }
    </tbody>
    

</table>

@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm("Estas seguro de eliminar? ")) {
                event.preventDefault();
            }
        });
    </script>
}